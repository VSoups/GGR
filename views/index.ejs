<%- include('./partials/header') %>

<h1>Good Game Reviews</h1>
<h3>Reviews written by fans</h3>
<% if (user) { %>
    <a href="/reviews/new" id="rev-post">Make a Review</a>
<% } %>
<section class="review-list">
    <% if (reviews.length) { %>
        <% reviews.forEach(function(r) { %>
            <div class="review">
                <!-- make game name a link to game's reviews (show) page? -->
                <h3><a href="/reviews/<%= r.game %>" id="title-link"><%= r.gameName %></a> - <%= r.rating %>/10</h3>
                <p><strong><img src="<%= r.avatar %>" class="user-img" referrerpolicy="no-referrer" alt="avatar"> <%= r.username %></strong></p>
                <p id="review-content"><%= r.content %></p>
            </div>
        <% }) %>
    <% } else { %>
        <h4 id="no-reviews">No reviews posted yet.<br><br>Be the first person to make a review!</h4>
    <% } %>
</section>



<%- include('./partials/footer') %>